@charset "utf-8";

body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6,pre, form, fieldset, input, textarea, p, blockquote, th, td {padding: 0; margin: 0;}    
fieldset, img { border: 0; }    
table {border-collapse: collapse;  border-spacing: 0;}    
ol, ul {list-style: none; }    
address, caption, cite, code, dfn, em, strong, th, var { font-weight: normal; font-style: normal;}    
caption, th {text-align: left;}    
h1, h2, h3, h4, h5, h6 {font-weight: normal;font-size: 100%;}    
q:before, q:after {content: '';}    
abbr, acronym {border: 0;}
a{ text-decoration:none;}
input:focus,button:focus,select:focus{outline:none;}
.clear{ clear: both;}
.max{ width:100%; max-width:750px; margin:auto;} 
.receive{ position: relative;}
.receive .bg{ width:100%;}
.receive .content{ width:100%; overflow:hidden; position:absolute; top:71%;}
.receive form{ display:block; width:65%; margin:auto; overflow:hidden; margin-left:17%; background:#fff;}
.receive form dt{ padding-left:5px; height:60px; line-height:60px; float:left; clear:right; color:#333333;}
.receive form dd{ padding-left:60px; height:60px; line-height:60px; clear:right;}
.receive form dd input[type="text"]{ height:30px; line-height:30px; border:1px solid #777777; border-radius:4px; margin-top:15px; width:95%; padding-left:5px;}
.receive form dd select{ width:25%; min-width:3.4em; height:30px; line-height:30px;}
.receive form dd.but{ text-align:center;}
.receive form dd.but button{ background:#ff930d; border:none; line-height:2em; width:6em; color:#fff; border-radius:4px;}
.receive .bottom{ background:#1b1b1b; text-align:center; color:#cbb156; height:45px; line-height:45px;}
 @media (max-width:400px) {
	 .receive form dt{height:40px; line-height:40px;}
	 .receive form dd{height:40px; line-height:40px;}
	 .receive form dd input[type="text"]{ height:25px; margin-top:6px;}
	 }




