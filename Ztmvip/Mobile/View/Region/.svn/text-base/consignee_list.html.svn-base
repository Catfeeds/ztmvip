<link rel="stylesheet" type="text/css" href="__CSS__/place_mobile.css" media="(max-width:750px)" />
<link rel="stylesheet" type="text/css" href="__CSS__/place_pad.css" media="(min-width:750px)">
</head>
<body>
<!-- 其他 -->
<!-- 地址头部开始 -->
<div class="header_box">
    <div class="header_title">收货地址</div>
    <span class="return" onclick="javascript:window.location='{:U('User/info')}';"><img src="__IMG__fh.jpg" alt="" /></span>
</div>
<!-- 地址头部结束 -->
<!-- 地址内容开始 -->
<div class="address_box">
 <!-- 添加修改地址 -->
    <div class="list_box change">
        <a href="#">
            <div class="icon"><img src="__IMG__icon1.jpg" alt="" /></div>
            <i>添加收货地址</i>
            <div class="jump"><img src="__IMG__fhy.gif" alt="" /></div>
        </a>
    </div>
    <!-- 地址列表 -->
    <div class="list_container">
        <div class="list_box list_current">
            <div class="default">
                <div class="default_inf">
                    <div class="name">收货人：凯大弟</div>
                    <div class="telephone">13413413413</div>
                </div>
                <div class="place">
                    广东省
                    广州市
                    天河区
                    花城大道
                    建滔广场
                </div>
            </div>
            <div class="choose">
                <div class="tick"><img src="__IMG__tick.jpg" alt="" /></div>
                <div class="ring"></div>
                <label for="choose1">设为默认地址</label>
                <input type="radio" name="current" value="默认地址1" id="choose1" />
                <div class="right">
                    <div class="edit_box">
                        <a href="#">
                            <div class="icon"><img src="__IMG__icon8.jpg" alt="" /></div>
                            编辑
                        </a>
                    </div>
                    <div class="edit_box delete">
                        <div class="icon"><img src="__IMG__icon9.jpg" alt="" /></div>
                        删除
                    </div>
                </div>
            </div>
        </div>
        <div class="list_box">
            <div class="default">
                <div class="default_inf">
                    <div class="name">收货人：凯二弟</div>
                    <div class="telephone">13413413413</div>
                </div>
                <div class="place">
                    广东省
                    广州市
                    越秀区
                    越秀公园
                </div>
            </div>
            <div class="choose">
                <div class="tick"><img src="__IMG__tick.jpg" alt="" /></div>
                <div class="ring"></div>
                <label for="choose2">设为默认地址</label>
                <input type="radio" name="current" value="默认地址1" id="choose2" />
                <div class="right">
                    <div class="edit_box">
                        <a href="#">
                            <div class="icon"><img src="__IMG__icon8.jpg" alt="" /></div>
                            编辑
                        </a>
                    </div>
                    <div class="edit_box delete">
                        <div class="icon"><img src="__IMG__icon9.jpg" alt="" /></div>
                        删除
                    </div>
                </div>
            </div>
        </div>
        <div class="list_box">
            <div class="default">
                <div class="default_inf">
                    <div class="name">收货人：凯小弟</div>
                    <div class="telephone">13413413413</div>
                </div>
                <div class="place">
                    广东省
                    广州市
                    白云区
                    白云国际会展中心
                </div>
            </div>
            <div class="choose">
                <div class="tick"><img src="__IMG__tick.jpg" alt="" /></div>
                <div class="ring"></div>
                <label for="choose3">设为默认地址</label>
                <input type="radio" name="current" value="默认地址1" id="choose3" />
                <div class="right">
                    <div class="edit_box">
                        <a href="#">
                            <div class="icon"><img src="__IMG__icon8.jpg" alt="" /></div>
                            编辑
                        </a>
                    </div>
                    <div class="edit_box delete">
                        <div class="icon"><img src="__IMG__icon9.jpg" alt="" /></div>
                        删除
                    </div>
                </div>
            </div>
        </div>
    </div>    
</div>
<!-- 地址删除提示块 -->
<div class="remind_bg">
    <div class="remind_box">
        <div class="title">确定要删除此信息</div>
        <div class="bt_box">
            <div class="cancel">取 消</div>
            <div class="determine">确 定</div>
        </div>
    </div>
</div>

<script>
    // 点击默认----默认顺序第一
    $("label").on('click',function(event) {
        $(this).parent().parent().addClass('list_current').siblings().removeClass('list_current')
        $(".list_container").prepend($(this).parent().parent());
    });
    // 点击删除-----
    $(".delete").on('click',function(event) {
        $(".remind_bg").fadeIn();
        $(this).parent().parent().parent().addClass('del');
        $(".cancel").on('click',function(event) {
            $(".remind_bg").fadeOut();
            $(".del").removeClass('del')
        });
        $(".determine").on('click',function(event) {
            $(".remind_bg").fadeOut();
            $(".del").remove();
            abc();  
        });
    });
    function abc(){
        if(!$(".list_container .list_box").length){
            $(".list_container").css({'background':"url(__IMG__place_bg.jpg) no-repeat top center","background-size":"50%"});
            $(".change i").text("添加收货地址")
        }
    }
    abc();
</script>
</body>
</html>