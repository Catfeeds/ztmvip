html{font-size:12px;font-family: "冬青黑体简体中文";height:100%;}
body{height:100%;}
.head_box{width:100%;max-width: 750px;position:fixed;top:0;background:#fff;z-index: 999;}
.head{width:100%;height:44px;border-bottom: 1px solid #ccc;text-align: center;font-size: 1.4rem;line-height:44px;position:relative;}
.head .return{width:9px;position:absolute;left:10px;top:13px;}
.columns_box{width:100%;height:44px;border-bottom: 1px solid #ccc;}
.columns_in{width:25%;height:44px;float:left;text-align: center;box-sizing: border-box;}
.columns_in .columns{width:100%;font-size: 1.1rem;height:28px;line-height:14px;margin-top:8px;border-right: 1px solid #ccc;color:#7F7F7F;box-sizing: border-box;}
.columns_in:last-child .columns{border:none;}
.cur{border-bottom: 2px solid #E8C473;}
.cur .columns{color:#252525;}
article{padding-top:90px;box-sizing: border-box;min-height:100%;}
.comments_in{padding:0 10px;font-size: 1.1rem;box-sizing: border-box;border-bottom: 1px solid #ccc;}
.comments_box .title{overflow: :hidden;line-height:30px;margin-top:10px;}
.comments_box .title .left{float:left;}
.comments_box .title .right{float:right;color:#B2B2B2;}
.score{width:100%;overflow:hidden;height:15px;}
.score .float,.star_box,.star{float:left;}
.score .float{color:#B2B2B2;}
.score .star{width:14px;}
.comments_in .inf{height:70px;padding:20px 0;box-sizing: border-box;}
.comments_box{display: none;}
.block{display:block;}


.copyright{height:77px;text-align: center;line-height: 20px;padding-top:10px;box-sizing: border-box;}
.placeholder{width:100%;height:50px;}
.nav_box{width:100%;max-width: 750px;height:50px;background: #252525;position:fixed;bottom:0;}
.nav_box .nav_in{width:25%;height:50px;float:left;}
.nav_box .nav_in .nav{width:30px;margin:10px auto;position:relative;}
.goods_num{width:15px;height:15px;border-radius: 50%;background:#FFD773;text-align: center;line-height: 15px;position:absolute;top:0;left:5px;color:#fff;}

